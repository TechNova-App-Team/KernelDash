<Window x:Class="KernelDash.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KernelDash" Height="950" Width="1800"
        Background="#1A1A1A" WindowStartupLocation="CenterScreen" 
        Foreground="#FFFFFF" WindowStyle="None" AllowsTransparency="True"
        ResizeMode="CanResize">
    
    <Border CornerRadius="20" Background="#1A1A1A" Margin="0">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" Opacity="0.4" ShadowDepth="0" Color="#000000"/>
        </Border.Effect>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- MODERN GLASSMORPHISM SIDEBAR -->
            <Border Grid.Column="0" CornerRadius="20,0,0,20">
                <Border.Background>
                    <SolidColorBrush Color="#252525" Opacity="0.85"/>
                </Border.Background>
                <Border.BorderBrush>
                    <SolidColorBrush Color="#FFFFFF" Opacity="0.1"/>
                </Border.BorderBrush>
                <Border.BorderThickness>0,0,1,0</Border.BorderThickness>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" Opacity="0.3" ShadowDepth="0" Color="#000000"/>
                </Border.Effect>
                <StackPanel>
                    <Border Padding="24,32,24,40">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                <TextBlock Text="âš¡" FontSize="28" Margin="0,0,8,0"/>
                                <TextBlock Text="KernelDash" FontSize="28" FontWeight="700" Foreground="#FFFFFF"/>
                            </StackPanel>
                            <TextBlock Text="System Monitor" FontSize="11" Foreground="#B0B0B0" FontWeight="500"/>
                        </StackPanel>
                    </Border>

                    <Button x:Name="BtnDashboard" Click="OnDashboardClick" Style="{StaticResource ActiveSidebarButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“Š" FontSize="16" Margin="0,0,12,0"/>
                            <TextBlock Text="Dashboard" FontSize="14"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="BtnProcesses" Click="OnProcessesClick" Style="{StaticResource SidebarButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âš™ï¸" FontSize="16" Margin="0,0,12,0"/>
                            <TextBlock Text="Processes" FontSize="14"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="BtnNetwork" Click="OnNetworkClick" Style="{StaticResource SidebarButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸŒ" FontSize="16" Margin="0,0,12,0"/>
                            <TextBlock Text="Network" FontSize="14"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="BtnGPU" Click="OnGPUClick" Style="{StaticResource SidebarButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸŽ®" FontSize="16" Margin="0,0,12,0"/>
                            <TextBlock Text="GPU Monitor" FontSize="14"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="BtnServices" Click="OnServicesClick" Style="{StaticResource SidebarButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ”§" FontSize="16" Margin="0,0,12,0"/>
                            <TextBlock Text="Services" FontSize="14"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="BtnStartup" Click="OnStartupClick" Style="{StaticResource SidebarButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸš€" FontSize="16" Margin="0,0,12,0"/>
                            <TextBlock Text="Startup" FontSize="14"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="BtnFileWatch" Click="OnFileWatcherClick" Style="{StaticResource SidebarButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“‚" FontSize="16" Margin="0,0,12,0"/>
                            <TextBlock Text="File Watcher" FontSize="14"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="BtnLogs" Click="OnLogsClick" Style="{StaticResource SidebarButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“‹" FontSize="16" Margin="0,0,12,0"/>
                            <TextBlock Text="System Logs" FontSize="14"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="BtnInfo" Click="OnInfoClick" Style="{StaticResource SidebarButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="â„¹ï¸" FontSize="16" Margin="0,0,12,0"/>
                            <TextBlock Text="About" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <Border VerticalAlignment="Bottom" Margin="0,20,0,0" Padding="24,24,24,32">
                        <Border Background="#2A2A2A" Opacity="0.8" CornerRadius="15" Padding="16" BorderThickness="1">
                            <Border.BorderBrush>
                                <SolidColorBrush Color="#FFFFFF" Opacity="0.1"/>
                            </Border.BorderBrush>
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" Opacity="0.25" ShadowDepth="2" Color="#000000"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="System Status" FontSize="10" Foreground="#B0B0B0" Margin="0,0,0,8" FontWeight="600"/>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <Ellipse Width="8" Height="8" Fill="#70AD47" VerticalAlignment="Center" Margin="0,0,8,0">
                                        <Ellipse.Effect>
                                            <DropShadowEffect BlurRadius="8" Opacity="0.6" ShadowDepth="0" Color="#70AD47"/>
                                        </Ellipse.Effect>
                                    </Ellipse>
                                    <TextBlock Text="Online" FontSize="12" Foreground="#FFFFFF" FontWeight="600"/>
                                </StackPanel>
                                <TextBlock x:Name="UptimeText" Text="Uptime: 0h 0m" FontSize="9" Foreground="#808080" FontWeight="500"/>
                            </StackPanel>
                        </Border>
                    </Border>
                </StackPanel>
            </Border>

            <!-- MAIN CONTENT -->
            <ScrollViewer Grid.Column="1" Padding="30" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- DASHBOARD PAGE -->
                    <StackPanel x:Name="DashboardPage" Loaded="DashboardPage_Loaded">
                        <TextBlock Text="Dashboard" FontSize="32" FontWeight="700" Foreground="#FFFFFF" Margin="0,0,0,24"/>
                        
                        <Grid Margin="0,0,0,30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Margin="0,0,16,0" Style="{StaticResource GlassStatCard}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                        <TextBlock Text="ðŸ’»" FontSize="18" Margin="0,0,10,0"/>
                                        <TextBlock Text="CPU Usage" FontSize="12" Foreground="#B0B0B0" FontWeight="600"/>
                                    </StackPanel>
                                    <TextBlock x:Name="CpuUsageText" Text="0%" FontSize="36" FontWeight="700" Foreground="#5B9BD5" Margin="0,0,0,8"/>
                                    <Border Height="6" Background="#404040" CornerRadius="3" Margin="0,0,0,0">
                                        <Border x:Name="CpuBarContainer" Height="6" CornerRadius="3" HorizontalAlignment="Left" Width="0">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                    <GradientStop Color="#5B9BD5" Offset="0"/>
                                                    <GradientStop Color="#7BB3E0" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <Border.Triggers>
                                                <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                                                    <BeginStoryboard>
                                                        <Storyboard RepeatBehavior="Forever">
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.7" To="1.0" Duration="0:0:1.5" AutoReverse="True"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                            </Border.Triggers>
                                        </Border>
                                    </Border>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="1" Margin="0,0,16,0" Style="{StaticResource GlassStatCard}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                        <TextBlock Text="ðŸ§ " FontSize="18" Margin="0,0,10,0"/>
                                        <TextBlock Text="Memory" FontSize="12" Foreground="#B0B0B0" FontWeight="600"/>
                                    </StackPanel>
                                    <TextBlock x:Name="RamUsageText" Text="0%" FontSize="36" FontWeight="700" Foreground="#70AD47" Margin="0,0,0,8"/>
                                    <Border Height="6" Background="#404040" CornerRadius="3" Margin="0,0,0,0">
                                        <Border x:Name="RamBarContainer" Height="6" CornerRadius="3" HorizontalAlignment="Left" Width="0">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                    <GradientStop Color="#70AD47" Offset="0"/>
                                                    <GradientStop Color="#8BC34A" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <Border.Triggers>
                                                <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                                                    <BeginStoryboard>
                                                        <Storyboard RepeatBehavior="Forever">
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.7" To="1.0" Duration="0:0:1.5" AutoReverse="True"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                            </Border.Triggers>
                                        </Border>
                                    </Border>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="2" Margin="0,0,16,0" Style="{StaticResource GlassStatCard}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                        <TextBlock Text="ðŸ’¾" FontSize="18" Margin="0,0,10,0"/>
                                        <TextBlock Text="Disk" FontSize="12" Foreground="#B0B0B0" FontWeight="600"/>
                                    </StackPanel>
                                    <TextBlock x:Name="DiskUsageText" Text="0%" FontSize="36" FontWeight="700" Foreground="#FF8C42" Margin="0,0,0,8"/>
                                    <Border Height="6" Background="#404040" CornerRadius="3" Margin="0,0,0,0">
                                        <Border x:Name="DiskBarContainer" Height="6" CornerRadius="3" HorizontalAlignment="Left" Width="0">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                    <GradientStop Color="#FF8C42" Offset="0"/>
                                                    <GradientStop Color="#FFA366" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <Border.Triggers>
                                                <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                                                    <BeginStoryboard>
                                                        <Storyboard RepeatBehavior="Forever">
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.7" To="1.0" Duration="0:0:1.5" AutoReverse="True"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                            </Border.Triggers>
                                        </Border>
                                    </Border>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="3" Style="{StaticResource GlassStatCard}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                        <TextBlock Text="ðŸ“‹" FontSize="18" Margin="0,0,10,0"/>
                                        <TextBlock Text="Processes" FontSize="12" Foreground="#B0B0B0" FontWeight="600"/>
                                    </StackPanel>
                                    <TextBlock x:Name="ProcessCountText" Text="0" FontSize="36" FontWeight="700" Foreground="#E74C3C"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <Border Style="{StaticResource ModernCard}" Margin="0,0,0,20">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                    <TextBlock Text="ðŸ–¥ï¸" FontSize="18" Margin="0,0,10,0"/>
                                    <TextBlock Text="System Information" FontSize="16" FontWeight="700" Foreground="#FFFFFF"/>
                                </StackPanel>
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <Border Style="{StaticResource InfoBadge}" Margin="0,0,12,12">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="ðŸªŸ" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                            <StackPanel>
                                                <TextBlock Text="Operating System" FontSize="9" Foreground="#B0B0B0" FontWeight="600" Margin="0,0,0,2"/>
                                                <TextBlock x:Name="OsInfo" Text="---" FontSize="12" Foreground="#FFFFFF" FontWeight="600"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                    <Border Style="{StaticResource InfoBadge}" Margin="0,0,12,12">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="âš¡" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                            <StackPanel>
                                                <TextBlock Text="Processor" FontSize="9" Foreground="#B0B0B0" FontWeight="600" Margin="0,0,0,2"/>
                                                <TextBlock x:Name="CpuInfo" Text="---" FontSize="12" Foreground="#FFFFFF" FontWeight="600" TextWrapping="Wrap" MaxWidth="300"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                    <Border Style="{StaticResource InfoBadge}" Margin="0,0,12,12">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="ðŸ’¾" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                            <StackPanel>
                                                <TextBlock Text="Total Memory" FontSize="9" Foreground="#B0B0B0" FontWeight="600" Margin="0,0,0,2"/>
                                                <TextBlock x:Name="RamInfo" Text="---" FontSize="12" Foreground="#FFFFFF" FontWeight="600"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </WrapPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- PROCESSES PAGE -->
                    <StackPanel x:Name="ProcessesPage" Visibility="Collapsed">
                        <TextBlock Text="Running Processes" FontSize="32" FontWeight="700" Foreground="#FFFFFF" Margin="0,0,0,24"/>
                        <Border Style="{StaticResource ModernCard}" Margin="0,0,0,20">
                            <StackPanel>
                                <Button Content="ðŸ”„ Refresh" Click="OnRefreshProcesses" Style="{StaticResource ModernButton}" Width="120" Margin="0,0,0,16"/>
                                <ListBox x:Name="ProcessList" Background="Transparent" BorderThickness="0" Height="500">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#333333" Opacity="0.8" Padding="16" Margin="0,0,0,8" CornerRadius="12" BorderThickness="1">
                                                <Border.BorderBrush>
                                                    <SolidColorBrush Color="#FFFFFF" Opacity="0.1"/>
                                                </Border.BorderBrush>
                                                <Border.Effect>
                                                    <DropShadowEffect BlurRadius="10" Opacity="0.15" ShadowDepth="1" Color="#000000"/>
                                                </Border.Effect>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="70"/>
                                                        <ColumnDefinition Width="220"/>
                                                        <ColumnDefinition Width="120"/>
                                                        <ColumnDefinition Width="100"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="110"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="{Binding ProcessId}" FontSize="10" Foreground="#B0B0B0" FontFamily="Courier New" FontWeight="500"/>
                                                    <TextBlock Text="{Binding ProcessName}" FontSize="12" FontWeight="600" Foreground="#FFFFFF" Grid.Column="1" Margin="12,0,0,0"/>
                                                    <TextBlock Text="{Binding CpuUsage, StringFormat='CPU: {0:F1}%'}" FontSize="10" Foreground="#5B9BD5" Grid.Column="2" Margin="12,0,0,0" FontWeight="600"/>
                                                    <TextBlock Text="{Binding MemoryMB, StringFormat='RAM: {0}MB'}" FontSize="10" Foreground="#4ECDC4" Grid.Column="3" Margin="12,0,0,0" FontWeight="600"/>
                                                    <TextBlock Text="{Binding FilePath}" FontSize="9" Foreground="#B0B0B0" Grid.Column="4" Margin="12,0,0,0" TextTrimming="CharacterEllipsis"/>
                                                    <Button Content="âœ• Kill" Style="{StaticResource ModernButton}" Background="#E74C3C" Grid.Column="5" Margin="12,0,0,0" Click="OnKillProcess" Tag="{Binding ProcessId}" Padding="8,6" FontSize="11"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- NETWORK PAGE -->
                    <StackPanel x:Name="NetworkPage" Visibility="Collapsed">
                        <TextBlock Text="Network" FontSize="32" FontWeight="700" Foreground="#FFFFFF" Margin="0,0,0,24"/>
                        <Border Style="{StaticResource ModernCard}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Network Adapters" FontSize="16" FontWeight="700" Foreground="#FFFFFF" Margin="0,0,0,16"/>
                                <ListBox x:Name="NetworkAdapters" Background="Transparent" BorderThickness="0" Height="200">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#333333" Padding="14" Margin="0,0,0,8" CornerRadius="12" BorderBrush="#404040" BorderThickness="1">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Name}" FontSize="12" FontWeight="700" Foreground="#FFFFFF" Margin="0,0,0,6"/>
                                                    <TextBlock Text="{Binding Status, StringFormat='Status: {0}'}" FontSize="10" Foreground="#B0B0B0" Margin="0,0,0,4"/>
                                                    <TextBlock Text="{Binding IpAddress, StringFormat='IP: {0}'}" FontSize="10" Foreground="#5B9BD5" Margin="0,0,0,4" FontWeight="600"/>
                                                    <TextBlock Text="{Binding Gateway, StringFormat='Gateway: {0}'}" FontSize="9" Foreground="#B0B0B0"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource ModernCard}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Network Statistics" FontSize="16" FontWeight="700" Foreground="#FFFFFF" Margin="0,0,0,16"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,20,12">
                                        <TextBlock Text="Packets Sent" FontSize="10" Foreground="#B0B0B0" FontWeight="600"/>
                                        <TextBlock x:Name="PacketsSent" Text="0" FontSize="22" FontWeight="700" Foreground="#5B9BD5"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Grid.Row="0" Margin="0,0,20,12">
                                        <TextBlock Text="Packets Received" FontSize="10" Foreground="#B0B0B0" FontWeight="600"/>
                                        <TextBlock x:Name="PacketsReceived" Text="0" FontSize="22" FontWeight="700" Foreground="#4ECDC4"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" Grid.Row="0">
                                        <TextBlock Text="Errors" FontSize="10" Foreground="#B0B0B0" FontWeight="600"/>
                                        <TextBlock x:Name="NetworkErrors" Text="0" FontSize="22" FontWeight="700" Foreground="#E74C3C"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="0" Grid.Row="1">
                                        <TextBlock Text="Bytes Sent" FontSize="10" Foreground="#B0B0B0" FontWeight="600"/>
                                        <TextBlock x:Name="BytesSent" Text="0 B" FontSize="16" FontWeight="700" Foreground="#5B9BD5"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Grid.Row="1">
                                        <TextBlock Text="Bytes Received" FontSize="10" Foreground="#B0B0B0" FontWeight="600"/>
                                        <TextBlock x:Name="BytesReceived" Text="0 B" FontSize="16" FontWeight="700" Foreground="#4ECDC4"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" Grid.Row="1">
                                        <TextBlock Text="Inbound Dropped" FontSize="10" Foreground="#B0B0B0" FontWeight="600"/>
                                        <TextBlock x:Name="InboundDropped" Text="0" FontSize="16" FontWeight="700" Foreground="#FF8C42"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource ModernCard}">
                            <StackPanel>
                                <TextBlock Text="Active Connections" FontSize="16" FontWeight="700" Foreground="#FFFFFF" Margin="0,0,0,16"/>
                                <ListBox x:Name="ActiveConnections" Background="Transparent" BorderThickness="0" Height="220">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#333333" Padding="12" Margin="0,0,0,8" CornerRadius="12" BorderBrush="#404040" BorderThickness="1">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding LocalAddress}" FontSize="10" FontWeight="700" Foreground="#FFFFFF" Margin="0,0,0,4"/>
                                                    <TextBlock Text="{Binding RemoteAddress, StringFormat='Remote: {0}'}" FontSize="9" Foreground="#B0B0B0" Margin="0,0,0,4"/>
                                                    <TextBlock Text="{Binding State, StringFormat='State: {0}'}" FontSize="9" Foreground="#5B9BD5" FontWeight="600"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- FILE WATCHER PAGE -->
                    <StackPanel x:Name="FileWatcherPage" Visibility="Collapsed">
                        <TextBlock Text="File Watcher" FontSize="32" FontWeight="700" Foreground="#FFFFFF" Margin="0,0,0,24"/>
                        <Border Style="{StaticResource ModernCard}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Watch Path" FontSize="13" Foreground="#B0B0B0" FontWeight="700" Margin="0,0,0,12"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Border CornerRadius="12" Background="#333333" BorderBrush="#404040" BorderThickness="1">
                                        <TextBox x:Name="WatchPath" Background="Transparent" Foreground="#FFFFFF" Padding="14" Text="C:\Users" BorderThickness="0" FontSize="12" FontWeight="500"/>
                                    </Border>
                                    <Button Content="ðŸ“" Grid.Column="1" Margin="12,0,12,0" Click="OnBrowseFolder" Style="{StaticResource ModernButton}" Width="44" Padding="0"/>
                                    <Button Content="â–¶ Start" Grid.Column="2" Click="OnStartWatcher" Style="{StaticResource ModernButton}" Width="110"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource ModernCard}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                    <TextBlock Text="File Events" FontSize="16" FontWeight="700" Foreground="#FFFFFF" VerticalAlignment="Center"/>
                                    <Button Content="ðŸ—‘ï¸ Clear" Click="OnClearLog" Style="{StaticResource ModernButton}" Margin="12,0,0,0" Padding="12,8" FontSize="11"/>
                                </StackPanel>
                                <ListBox x:Name="FileWatcherLog" Background="Transparent" BorderThickness="0" Height="300" FontSize="10" Foreground="#B0B0B0" FontFamily="Courier New"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- GPU MONITOR PAGE -->
                    <StackPanel x:Name="GPUPage" Visibility="Collapsed">
                        <TextBlock Text="GPU Monitor" FontSize="32" FontWeight="700" Foreground="#FFFFFF" Margin="0,0,0,24"/>
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Margin="0,0,16,0" Style="{StaticResource GlassStatCard}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                        <TextBlock Text="ðŸŽ®" FontSize="18" Margin="0,0,10,0"/>
                                        <TextBlock Text="GPU Usage" FontSize="12" Foreground="#B0B0B0" FontWeight="600"/>
                                    </StackPanel>
                                    <TextBlock x:Name="GpuUsageText" Text="N/A" FontSize="36" FontWeight="700" Foreground="#9D4EDD" Margin="0,0,0,8"/>
                                    <Border Height="6" Background="#404040" CornerRadius="3">
                                        <Border x:Name="GpuBarContainer" Height="6" CornerRadius="3" HorizontalAlignment="Left" Width="0">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                    <GradientStop Color="#9D4EDD" Offset="0"/>
                                                    <GradientStop Color="#C77DFF" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                        </Border>
                                    </Border>
                                </StackPanel>
                            </Border>
                            <Border Grid.Column="1" Style="{StaticResource GlassStatCard}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                        <TextBlock Text="ðŸŒ¡ï¸" FontSize="18" Margin="0,0,10,0"/>
