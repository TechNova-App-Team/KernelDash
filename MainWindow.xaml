<Window x:Class="KernelDash.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KernelDash - System Manager" Height="900" Width="1800"
        Background="#0f0f0f" WindowStartupLocation="CenterScreen" Foreground="#ffffff">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR NAVIGATION -->
        <Border Grid.Column="0" Background="#1a1a1a" BorderBrush="#2a2a2a" BorderThickness="0,0,1,0">
            <StackPanel>
                <TextBlock Text="KernelDash" Foreground="#ffffff" FontSize="28" FontWeight="Bold" Padding="30,35,30,5"/>
                <TextBlock Text="System Manager" Foreground="#888888" FontSize="10" Padding="30,0,30,45" FontFamily="Courier New"/>
                
                <Button x:Name="BtnDashboard" Content="ðŸ“Š Dashboard" Foreground="#ffffff" Background="Transparent" 
                        BorderThickness="0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" 
                        Padding="30,20" FontSize="14" Click="OnDashboardClick" 
                        MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave"/>
                
                <Button x:Name="BtnProcesses" Content="âš™ï¸  Prozesse" Foreground="#aaaaaa" Background="Transparent" 
                        BorderThickness="0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" 
                        Padding="30,20" FontSize="14" Click="OnProcessesClick" 
                        MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave"/>
                
                <Button x:Name="BtnFileWatch" Content="ðŸ“‚ DateiwÃ¤chter" Foreground="#aaaaaa" Background="Transparent" 
                        BorderThickness="0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" 
                        Padding="30,20" FontSize="14" Click="OnFileWatcherClick" 
                        MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave"/>
                
                <Button x:Name="BtnInfo" Content="â„¹ï¸  Information" Foreground="#aaaaaa" Background="Transparent" 
                        BorderThickness="0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" 
                        Padding="30,20" FontSize="14" Click="OnInfoClick" 
                        MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave"/>
            </StackPanel>
        </Border>

        <!-- MAIN CONTENT AREA -->
        <Grid Grid.Column="1" Background="#0f0f0f">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- TOP BAR WITH TITLE -->
            <Border Grid.Row="0" Background="#1a1a1a" BorderBrush="#2a2a2a" BorderThickness="0,0,0,1">
                <TextBlock x:Name="PageTitle" Text="Dashboard" Foreground="#ffffff" FontSize="32" FontWeight="Bold" 
                           Padding="40,25,0,0" VerticalAlignment="Top"/>
            </Border>

            <!-- SCROLLABLE CONTENT -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="#0f0f0f">
                <StackPanel x:Name="ContentPanel">
                    
                    <!-- ========== DASHBOARD PAGE ========== -->
                    <StackPanel x:Name="DashboardPage" Margin="40,40,40,40">
                        
                        <!-- TOP METRICS ROW -->
                        <Grid Margin="0,0,0,40">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- CPU METRIC -->
                            <Border Grid.Column="0" Background="#1a1a1a" Padding="30" Margin="0,0,20,0" BorderBrush="#2a2a2a" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="CPU-AUSLASTUNG" Foreground="#777777" FontSize="11" FontWeight="Bold" Margin="0,0,0,15"/>
                                    <TextBlock x:Name="CpuValue" Text="0%" Foreground="#ffffff" FontSize="48" FontWeight="Bold" Margin="0,0,0,10"/>
                                    <ProgressBar x:Name="CpuProgress" Height="4" Background="#333333" Foreground="#4CAF50" Margin="0,0,0,8"/>
                                    <TextBlock x:Name="CpuState" Text="Idle" Foreground="#666666" FontSize="10"/>
                                </StackPanel>
                            </Border>

                            <!-- RAM METRIC -->
                            <Border Grid.Column="1" Background="#1a1a1a" Padding="30" Margin="0,0,20,0" BorderBrush="#2a2a2a" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="RAM-SPEICHER" Foreground="#777777" FontSize="11" FontWeight="Bold" Margin="0,0,0,15"/>
                                    <TextBlock x:Name="RamValue" Text="0 GB / 0 GB" Foreground="#ffffff" FontSize="40" FontWeight="Bold" Margin="0,0,0,10"/>
                                    <ProgressBar x:Name="RamProgress" Height="4" Background="#333333" Foreground="#2196F3" Margin="0,0,0,8"/>
                                    <TextBlock x:Name="RamPercent" Text="0%" Foreground="#666666" FontSize="10"/>
                                </StackPanel>
                            </Border>

                            <!-- DISK METRIC -->
                            <Border Grid.Column="2" Background="#1a1a1a" Padding="30" Margin="0,0,20,0" BorderBrush="#2a2a2a" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="DISK C:" Foreground="#777777" FontSize="11" FontWeight="Bold" Margin="0,0,0,15"/>
                                    <TextBlock x:Name="DiskValue" Text="0 GB / 0 GB" Foreground="#ffffff" FontSize="40" FontWeight="Bold" Margin="0,0,0,10"/>
                                    <ProgressBar x:Name="DiskProgress" Height="4" Background="#333333" Foreground="#FF9800" Margin="0,0,0,8"/>
                                    <TextBlock x:Name="DiskPercent" Text="0%" Foreground="#666666" FontSize="10"/>
                                </StackPanel>
                            </Border>

                            <!-- PROCESSES METRIC -->
                            <Border Grid.Column="3" Background="#1a1a1a" Padding="30" BorderBrush="#2a2a2a" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="PROZESSE" Foreground="#777777" FontSize="11" FontWeight="Bold" Margin="0,0,0,15"/>
                                    <TextBlock x:Name="ProcessCount" Text="0" Foreground="#ffffff" FontSize="48" FontWeight="Bold" Margin="0,0,0,10"/>
                                    <TextBlock Text="laufende Programme" Foreground="#666666" FontSize="10"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- SYSTEM INFO SECTION -->
                        <Border Background="#1a1a1a" Padding="30" Margin="0,0,0,30" BorderBrush="#2a2a2a" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="SYSTEMINFORMATIONEN" Foreground="#777777" FontSize="11" FontWeight="Bold" Margin="0,0,0,20"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Row 1 -->
                                    <TextBlock Text="Computername:" Foreground="#aaaaaa" FontSize="12" Margin="0,0,20,15"/>
                                    <TextBlock x:Name="ComputerName" Text="-" Foreground="#ffffff" FontSize="12" Grid.Column="1" Margin="0,0,0,15"/>
                                    <TextBlock Text="Benutzer:" Foreground="#aaaaaa" FontSize="12" Grid.Column="2" Margin="0,0,20,15"/>
                                    <TextBlock x:Name="UserName" Text="-" Foreground="#ffffff" FontSize="12" Grid.Column="3" Margin="0,0,0,15"/>
                                    <TextBlock Text="IP-Adresse:" Foreground="#aaaaaa" FontSize="12" Grid.Column="4" Margin="0,0,20,15"/>
                                    <TextBlock x:Name="IpAddress" Text="-" Foreground="#ffffff" FontSize="12" Grid.Column="5" Margin="0,0,0,15"/>

                                    <!-- Row 2 -->
                                    <TextBlock Text="Betriebssystem:" Foreground="#aaaaaa" FontSize="12" Grid.Row="1" Margin="0,0,20,15"/>
                                    <TextBlock x:Name="OsInfo" Text="-" Foreground="#ffffff" FontSize="12" Grid.Column="1" Grid.Row="1" Margin="0,0,0,15"/>
                                    <TextBlock Text="Uptime:" Foreground="#aaaaaa" FontSize="12" Grid.Column="2" Grid.Row="1" Margin="0,0,20,15"/>
                                    <TextBlock x:Name="UpTime" Text="-" Foreground="#ffffff" FontSize="12" Grid.Column="3" Grid.Row="1" Margin="0,0,0,15"/>
                                    <TextBlock Text="Kerne:" Foreground="#aaaaaa" FontSize="12" Grid.Column="4" Grid.Row="1" Margin="0,0,20,15"/>
                                    <TextBlock x:Name="ProcessorCount" Text="-" Foreground="#ffffff" FontSize="12" Grid.Column="5" Grid.Row="1" Margin="0,0,0,15"/>

                                    <!-- Row 3 -->
                                    <TextBlock Text="RAM (Gesamt):" Foreground="#aaaaaa" FontSize="12" Grid.Row="2" Margin="0,0,20,0"/>
                                    <TextBlock x:Name="TotalRam" Text="-" Foreground="#ffffff" FontSize="12" Grid.Column="1" Grid.Row="2"/>
                                    <TextBlock Text="Systemarchitektur:" Foreground="#aaaaaa" FontSize="12" Grid.Column="2" Grid.Row="2" Margin="0,0,20,0"/>
                                    <TextBlock x:Name="Architecture" Text="-" Foreground="#ffffff" FontSize="12" Grid.Column="3" Grid.Row="2"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- NETWORK INFO -->
                        <Border Background="#1a1a1a" Padding="30" BorderBrush="#2a2a2a" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="NETZWERK" Foreground="#777777" FontSize="11" FontWeight="Bold" Margin="0,0,0,15"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="MAC-Adresse:" Foreground="#aaaaaa" FontSize="11"/>
                                    <TextBlock x:Name="MacAddress" Text="-" Foreground="#ffffff" FontSize="11" Grid.Column="1" Margin="15,0,0,0"/>
                                    <TextBlock Text="DNS:" Foreground="#aaaaaa" FontSize="11" Grid.Column="2" Margin="40,0,0,0"/>
                                    <TextBlock x:Name="DnsServer" Text="-" Foreground="#ffffff" FontSize="11" Grid.Column="3" Margin="15,0,0,0"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- ========== PROCESSES PAGE ========== -->
                    <StackPanel x:Name="ProcessesPage" Visibility="Collapsed" Margin="40,40,40,40">
                        
                        <!-- CONTROLS -->
                        <Border Background="#1a1a1a" Padding="25" Margin="0,0,0,25" BorderBrush="#2a2a2a" BorderThickness="1">
                            <StackPanel Orientation="Horizontal">
                                <Button Content="ðŸ”„ Aktualisieren" Background="#333333" Foreground="#ffffff" Padding="15,12" 
                                        FontSize="12" BorderThickness="0" Click="OnRefreshProcesses" Margin="0,0,20,0" 
                                        Cursor="Hand"/>
                                <TextBlock Text="Prozesse:" Foreground="#aaaaaa" FontSize="12" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock x:Name="ProcessCountLabel" Text="0" Foreground="#ffffff" FontSize="13" FontWeight="Bold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- PROCESS LIST -->
                        <ListBox x:Name="ProcessGrid" Background="#1a1a1a" Foreground="#cccccc" BorderThickness="1" 
                                 BorderBrush="#2a2a2a" ScrollViewer.VerticalScrollBarVisibility="Auto" Margin="0,0,0,20" 
                                 Height="550" Padding="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="Transparent" Padding="20,12" Margin="0,0,0,0" BorderBrush="#2a2a2a" BorderThickness="0,0,0,1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="220"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="120"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding ProcessId}" Foreground="#888888" FontSize="11" FontFamily="Courier New"/>
                                            <TextBlock Text="{Binding ProcessName}" Foreground="#ffffff" FontSize="11" FontWeight="Bold" Grid.Column="1" Margin="15,0,0,0"/>
                                            <TextBlock Text="{Binding FilePath}" Foreground="#555555" FontSize="10" Grid.Column="2" Margin="15,0,0,0" TextTrimming="CharacterEllipsis"/>
                                            <Button Content="âœ• KILL" Background="#c41e3a" Foreground="white" Padding="10,5" 
                                                    FontSize="10" BorderThickness="0" Grid.Column="3" Margin="15,0,0,0" 
                                                    Click="OnKillProcess" Tag="{Binding ProcessId}" Cursor="Hand"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>

                    <!-- ========== FILE WATCHER PAGE ========== -->
                    <StackPanel x:Name="FileWatcherPage" Visibility="Collapsed" Margin="40,40,40,40">
                        
                        <!-- PATH SELECTOR -->
                        <Border Background="#1a1a1a" Padding="25" Margin="0,0,0,25" BorderBrush="#2a2a2a" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="ÃœBERWACHTER PFAD" Foreground="#777777" FontSize="11" FontWeight="Bold" Margin="0,0,0,12"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="WatchPath" Background="#0f0f0f" Foreground="#ffffff" Padding="12,10" 
                                             Text="C:\Users" BorderThickness="1" BorderBrush="#333333" FontSize="11"
                                            />
                                    <Button Content="ðŸ“" Background="#333333" Foreground="#ffffff" Padding="12,10" 
                                            FontSize="12" BorderThickness="0" Grid.Column="1" Margin="10,0,10,0" 
                                            Click="OnBrowseFolder" Cursor="Hand" Width="45"/>
                                    <Button Content="â–¶ START" Background="#1e90ff" Foreground="white" Padding="12,10" 
                                            FontSize="11" BorderThickness="0" Grid.Column="2" Click="OnStartWatcher" 
                                            Width="110" Cursor="Hand"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- CLEAR LOG BUTTON -->
                        <Border Background="#1a1a1a" Padding="25" Margin="0,0,0,25" BorderBrush="#2a2a2a" BorderThickness="1">
                            <Button Content="ðŸ—‘ï¸ Log lÃ¶schen" Background="#333333" Foreground="#ffffff" Padding="12,8" 
                                    FontSize="11" BorderThickness="0" Click="OnClearLog" Width="120" 
                                    Cursor="Hand"/>
                        </Border>

                        <!-- LOG DISPLAY -->
                        <Border Background="#1a1a1a" Padding="20" Height="480" Margin="0,0,0,20" BorderBrush="#2a2a2a" BorderThickness="1">
                            <ListBox x:Name="FileWatcherLog" Background="Transparent" Foreground="#888888" 
                                     BorderThickness="0" ScrollViewer.VerticalScrollBarVisibility="Auto" 
                                     FontSize="10" FontFamily="Courier New" Padding="0"/>
                        </Border>
                    </StackPanel>

                    <!-- ========== INFO PAGE ========== -->
                    <StackPanel x:Name="InfoPage" Visibility="Collapsed" Margin="40,40,40,40">
                        
                        <Border Background="#1a1a1a" Padding="40" Margin="0,0,0,25" BorderBrush="#2a2a2a" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="KernelDash v1.0.0" Foreground="#ffffff" FontSize="36" FontWeight="Bold" Margin="0,0,0,15"/>
                                <TextBlock Text="Modern System Manager Dashboard fÃ¼r Windows" Foreground="#888888" FontSize="13" Margin="0,0,0,35"/>
                                
                                <TextBlock Text="Features" Foreground="#ffffff" FontSize="14" FontWeight="Bold" Margin="0,0,0,15"/>
                                <TextBlock Text="âœ“ Echtzeit CPU, RAM, Disk Monitoring" Foreground="#aaaaaa" FontSize="11" Margin="0,0,0,8"/>
                                <TextBlock Text="âœ“ Prozess-Manager mit Kill-Funktion" Foreground="#aaaaaa" FontSize="11" Margin="0,0,0,8"/>
                                <TextBlock Text="âœ“ Live Dateisystem-Watcher mit Logging" Foreground="#aaaaaa" FontSize="11" Margin="0,0,0,8"/>
                                <TextBlock Text="âœ“ Umfassende Systeminformationen" Foreground="#aaaaaa" FontSize="11" Margin="0,0,0,8"/>
                                <TextBlock Text="âœ“ Netzwerk- und IP-Informationen" Foreground="#aaaaaa" FontSize="11" Margin="0,0,0,8"/>
                                <TextBlock Text="âœ“ System Uptime Tracking" Foreground="#aaaaaa" FontSize="11" Margin="0,0,0,35"/>
                                
                                <TextBlock Text="TastenkÃ¼rzel" Foreground="#ffffff" FontSize="14" FontWeight="Bold" Margin="0,0,0,15"/>
                                <TextBlock Text="F5 = Prozesse aktualisieren | ESC = Anwendung beenden" Foreground="#777777" FontSize="10" FontFamily="Courier New"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
