<Window x:Class="KernelDash.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="KernelDash Ultimate" Height="900" Width="1400"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- ULTIMATE MODERN COLOR PALETTE -->
        <Color x:Key="PrimaryBg">#0A0E27</Color>
        <Color x:Key="SecondaryBg">#151932</Color>
        <Color x:Key="AccentColor">#00D4FF</Color>
        <Color x:Key="AccentSecondary">#FF6B35</Color>
        <Color x:Key="SuccessColor">#00FF88</Color>
        <Color x:Key="WarningColor">#FFD700</Color>
        <Color x:Key="DangerColor">#FF4757</Color>
        <Color x:Key="GlassBg">#1E2139</Color>
        <Color x:Key="TextPrimary">#FFFFFF</Color>
        <Color x:Key="TextSecondary">#A8B2D1</Color>
        <SolidColorBrush x:Key="BorderGlow" Color="#00D4FF" Opacity="0.2"/>
        
        <!-- MODERN BRUSHES -->
        <SolidColorBrush x:Key="PrimaryBgBrush" Color="{StaticResource PrimaryBg}"/>
        <SolidColorBrush x:Key="SecondaryBgBrush" Color="{StaticResource SecondaryBg}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="AccentSecondaryBrush" Color="{StaticResource AccentSecondary}"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
        <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
        <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}"/>
        <SolidColorBrush x:Key="GlassBrush" Color="{StaticResource GlassBg}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
        
        <!-- GLASSMORPHISM EFFECT -->
        <Style x:Key="GlassCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="{StaticResource GlassBg}" Opacity="0.7"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="{StaticResource BorderGlow}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Color="{StaticResource AccentColor}" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- MODERN BUTTON STYLE -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Segoe UI Variable"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="{StaticResource AccentColor}" Opacity="0.2"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <SolidColorBrush Color="{StaticResource AccentColor}" Opacity="0.2"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <SolidColorBrush Color="{StaticResource AccentColor}" Opacity="0.3"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- ACTIVE BUTTON STYLE -->
        <Style x:Key="ActiveButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{StaticResource AccentColor}" Offset="0"/>
                        <GradientStop Color="{StaticResource AccentSecondary}" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- MODERN TITLEBAR -->
        <Style x:Key="TitleBar" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="{StaticResource PrimaryBg}" Offset="0"/>
                        <GradientStop Color="{StaticResource SecondaryBg}" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ANIMATION STORYBOARD -->
        <Storyboard x:Key="GlowAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                           From="0.3" To="0.8" Duration="0:0:2" 
                           AutoReverse="True"/>
        </Storyboard>
        
        <!-- ROUNDED BUTTON TEMPLATE -->
        <ControlTemplate x:Key="RoundedButtonTemplate" TargetType="Button">
            <Border Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="{TemplateBinding BorderThickness}" 
                    CornerRadius="8">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
        </ControlTemplate>
    </Window.Resources>
    
    <!-- MAIN GRID -->
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource PrimaryBg}" Offset="0"/>
                <GradientStop Color="{StaticResource SecondaryBg}" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <!-- MAIN LAYOUT -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/> <!-- TitleBar -->
                <RowDefinition Height="80"/> <!-- Navigation -->
                <RowDefinition Height="*"/> <!-- Content -->
            </Grid.RowDefinitions>
            
            <!-- MODERN TITLEBAR -->
            <Border Grid.Row="0" Style="{StaticResource TitleBar}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- LOGO & TITLE -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="20,0,0,0" VerticalAlignment="Center">
                        <Border Width="35" Height="35" CornerRadius="8" Margin="0,0,15,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="{StaticResource AccentColor}" Offset="0"/>
                                    <GradientStop Color="{StaticResource AccentSecondary}" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <TextBlock Text="âš¡" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                        </Border>
                        <TextBlock Text="KernelDash Ultimate" FontFamily="Segoe UI Variable" FontSize="18" FontWeight="Bold" 
                                  Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- WINDOW CONTROLS -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,20,0" VerticalAlignment="Center">
                        <Button x:Name="MinimizeBtn" Content="âˆ’" Width="40" Height="30" Margin="5,0" 
                               Background="{StaticResource GlassBrush}" Foreground="{StaticResource TextPrimaryBrush}" 
                               BorderThickness="0" Template="{DynamicResource RoundedButtonTemplate}" Click="MinimizeBtn_Click"/>
                        <Button x:Name="MaximizeBtn" Content="â–¡" Width="40" Height="30" Margin="5,0" 
                               Background="{StaticResource GlassBrush}" Foreground="{StaticResource TextPrimaryBrush}" 
                               BorderThickness="0" Template="{DynamicResource RoundedButtonTemplate}" Click="MaximizeBtn_Click"/>
                        <Button x:Name="CloseBtn" Content="âœ•" Width="40" Height="30" Margin="5,0" 
                               Background="{StaticResource DangerBrush}" Foreground="White" 
                               BorderThickness="0" Template="{DynamicResource RoundedButtonTemplate}" Click="CloseBtn_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- MODERN NAVIGATION -->
            <Border Grid.Row="1" Style="{StaticResource GlassCard}" Margin="20,10,20,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- NAVIGATION BUTTONS -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <Button x:Name="BtnDashboard" Content="ðŸ“Š Dashboard" Style="{StaticResource ActiveButton}" 
                               Width="120" Height="45" Margin="10,0" Click="OnDashboardClick"/>
                        <Button x:Name="BtnOptimization" Content="âš¡ Optimization" Style="{StaticResource ModernButton}" 
                               Width="140" Height="45" Margin="5,0" Click="OnOptimizationClick"/>
                        <Button x:Name="BtnNetwork" Content="ðŸŒ Network" Style="{StaticResource ModernButton}" 
                               Width="120" Height="45" Margin="5,0" Click="OnNetworkClick"/>
                        <Button x:Name="BtnProcesses" Content="ðŸ”§ Processes" Style="{StaticResource ModernButton}" 
                               Width="120" Height="45" Margin="5,0" Click="OnProcessesClick"/>
                        <Button x:Name="BtnGaming" Content="ðŸŽ® Gaming" Style="{StaticResource ModernButton}" 
                               Width="120" Height="45" Margin="5,0" Click="OnGamingClick"/>
                        <Button x:Name="BtnAdvanced" Content="ðŸ”¬ Advanced" Style="{StaticResource ModernButton}" 
                               Width="120" Height="45" Margin="5,0" Click="OnAdvancedClick"/>
                    </StackPanel>
                    
                    <!-- SYSTEM STATUS -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="20,0">
                        <Border Width="12" Height="12" CornerRadius="6" Margin="5,0">
                            <Border.Background>
                                <SolidColorBrush Color="{StaticResource SuccessColor}"/>
                            </Border.Background>
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard Storyboard="{StaticResource GlowAnimation}"/>
                                </EventTrigger>
                            </Border.Triggers>
                        </Border>
                        <TextBlock Text="System Optimized" FontFamily="Segoe UI Variable" FontSize="12" 
                                  Foreground="{StaticResource SuccessBrush}" VerticalAlignment="Center" Margin="5,0,20,0"/>
                        
                        <TextBlock x:Name="PerformanceGainText" Text="+0%" FontFamily="Segoe UI Variable" FontSize="14" 
                                  FontWeight="Bold" Foreground="{StaticResource AccentBrush}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- MAIN CONTENT AREA -->
            <Grid Grid.Row="2" Margin="20,10,20,20">
                <!-- DASHBOARD PAGE -->
                <Grid x:Name="DashboardPage" Visibility="Visible">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- TOP ROW - PERFORMANCE METRICS -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- CPU CARD -->
                        <Border Grid.Column="0" Style="{StaticResource GlassCard}" Margin="0,0,10,0">
                            <StackPanel Margin="20">
                                <TextBlock Text="CPU" FontFamily="Segoe UI Variable" FontSize="16" FontWeight="Bold" 
                                          Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock x:Name="CpuUsageText" Text="0%" FontFamily="Segoe UI Variable" FontSize="28" 
                                          FontWeight="Bold" Foreground="{StaticResource AccentBrush}" Margin="0,10,0,0"/>
                                <Border Height="8" CornerRadius="4" Background="{StaticResource SecondaryBgBrush}" Margin="0,15,0,0">
                                    <Border x:Name="CpuBarContainer" Height="8" CornerRadius="4" HorizontalAlignment="Left" 
                                           Background="{StaticResource AccentBrush}" Width="0"/>
                                </Border>
                                <TextBlock x:Name="CpuTempText" Text="Temp: --Â°C" FontFamily="Segoe UI Variable" FontSize="11" 
                                          Foreground="{StaticResource TextSecondaryBrush}" Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- MEMORY CARD -->
                        <Border Grid.Column="1" Style="{StaticResource GlassCard}" Margin="10,0">
                            <StackPanel Margin="20">
                                <TextBlock Text="Memory" FontFamily="Segoe UI Variable" FontSize="16" FontWeight="Bold" 
                                          Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock x:Name="RamUsageText" Text="0%" FontFamily="Segoe UI Variable" FontSize="28" 
                                          FontWeight="Bold" Foreground="{StaticResource SuccessBrush}" Margin="0,10,0,0"/>
                                <Border Height="8" CornerRadius="4" Background="{StaticResource SecondaryBgBrush}" Margin="0,15,0,0">
                                    <Border x:Name="RamBarContainer" Height="8" CornerRadius="4" HorizontalAlignment="Left" 
                                           Background="{StaticResource SuccessBrush}" Width="0"/>
                                </Border>
                                <TextBlock x:Name="RamAvailableText" Text="Available: --GB" FontFamily="Segoe UI Variable" FontSize="11" 
                                          Foreground="{StaticResource TextSecondaryBrush}" Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- GPU CARD -->
                        <Border Grid.Column="2" Style="{StaticResource GlassCard}" Margin="10,0">
                            <StackPanel Margin="20">
                                <TextBlock Text="GPU" FontFamily="Segoe UI Variable" FontSize="16" FontWeight="Bold" 
                                          Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock x:Name="GpuUsageText" Text="0%" FontFamily="Segoe UI Variable" FontSize="28" 
                                          FontWeight="Bold" Foreground="{StaticResource AccentSecondaryBrush}" Margin="0,10,0,0"/>
                                <Border Height="8" CornerRadius="4" Background="{StaticResource SecondaryBgBrush}" Margin="0,15,0,0">
                                    <Border x:Name="GpuBarContainer" Height="8" CornerRadius="4" HorizontalAlignment="Left" 
                                           Background="{StaticResource AccentSecondaryBrush}" Width="0"/>
                                </Border>
                                <TextBlock x:Name="GpuTempText" Text="Temp: --Â°C" FontFamily="Segoe UI Variable" FontSize="11" 
                                          Foreground="{StaticResource TextSecondaryBrush}" Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- DISK CARD -->
                        <Border Grid.Column="3" Style="{StaticResource GlassCard}" Margin="10,0,0,0">
                            <StackPanel Margin="20">
                                <TextBlock Text="Disk" FontFamily="Segoe UI Variable" FontSize="16" FontWeight="Bold" 
                                          Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock x:Name="DiskUsageText" Text="0%" FontFamily="Segoe UI Variable" FontSize="28" 
                                          FontWeight="Bold" Foreground="{StaticResource WarningBrush}" Margin="0,10,0,0"/>
                                <Border Height="8" CornerRadius="4" Background="{StaticResource SecondaryBgBrush}" Margin="0,15,0,0">
                                    <Border x:Name="DiskBarContainer" Height="8" CornerRadius="4" HorizontalAlignment="Left" 
                                           Background="{StaticResource WarningBrush}" Width="0"/>
                                </Border>
                                <TextBlock x:Name="DiskSpeedText" Text="Read: --MB/s" FontFamily="Segoe UI Variable" FontSize="11" 
                                          Foreground="{StaticResource TextSecondaryBrush}" Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                    
                    <!-- BOTTOM ROW - CHARTS & INFO -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- PERFORMANCE CHARTS -->
                        <Border Grid.Column="0" Style="{StaticResource GlassCard}" Margin="0,0,10,0">
                            <Grid Margin="20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Text="Real-time Performance" FontFamily="Segoe UI Variable" FontSize="16" FontWeight="Bold" 
                                          Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,20"/>
                                
                                <Canvas Grid.Row="1" x:Name="PerformanceChart" Background="Transparent">
                                    <!-- CPU Chart Line -->
                                    <Polyline x:Name="CpuChartLine" Stroke="{StaticResource AccentBrush}" StrokeThickness="2" 
                                            Points="0,50 50,50 100,50 150,50 200,50"/>
                                    
                                    <!-- Memory Chart Line -->
                                    <Polyline x:Name="RamChartLine" Stroke="{StaticResource SuccessBrush}" StrokeThickness="2" 
                                            Points="0,50 50,50 100,50 150,50 200,50"/>
                                    
                                    <!-- GPU Chart Line -->
                                    <Polyline x:Name="GpuChartLine" Stroke="{StaticResource AccentSecondaryBrush}" StrokeThickness="2" 
                                            Points="0,50 50,50 100,50 150,50 200,50"/>
                                </Canvas>
                            </Grid>
                        </Border>
                        
                        <!-- SYSTEM INFO -->
                        <Border Grid.Column="1" Style="{StaticResource GlassCard}" Margin="10,0,0,0">
                            <StackPanel Margin="20">
                                <TextBlock Text="System Information" FontFamily="Segoe UI Variable" FontSize="16" FontWeight="Bold" 
                                          Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,20"/>
                                
                                <TextBlock x:Name="SystemNameText" Text="System: --" FontFamily="Segoe UI Variable" FontSize="12" 
                                          Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5"/>
                                <TextBlock x:Name="CpuModelText" Text="CPU: --" FontFamily="Segoe UI Variable" FontSize="12" 
                                          Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5"/>
                                <TextBlock x:Name="GpuModelText" Text="GPU: --" FontFamily="Segoe UI Variable" FontSize="12" 
                                          Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5"/>
                                <TextBlock x:Name="TotalRamText" Text="RAM: --" FontFamily="Segoe UI Variable" FontSize="12" 
                                          Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5"/>
                                <TextBlock x:Name="UptimeText" Text="Uptime: --" FontFamily="Segoe UI Variable" FontSize="12" 
                                          Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5"/>
                                
                                <Separator Margin="0,20,0,20" Background="{StaticResource BorderGlow}"/>
                                
                                <TextBlock Text="Performance Score" FontFamily="Segoe UI Variable" FontSize="14" FontWeight="Bold" 
                                          Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,10"/>
                                <TextBlock x:Name="PerformanceScoreText" Text="0" FontFamily="Segoe UI Variable" FontSize="24" 
                                          FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                                <TextBlock x:Name="PerformanceStatusText" Text="Status: --" FontFamily="Segoe UI Variable" FontSize="12" 
                                          Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
                
                <!-- OPTIMIZATION PAGE -->
                <Grid x:Name="OptimizationPage" Visibility="Collapsed">
                    <Border Style="{StaticResource GlassCard}">
                        <StackPanel Margin="30,25">
                            <TextBlock Text="System Optimization" FontFamily="Segoe UI Variable" FontSize="24" FontWeight="Bold" 
                                      Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,20"/>
                            <TextBlock Text="Optimize your system for maximum performance" FontFamily="Segoe UI Variable" FontSize="14" 
                                      Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,30"/>
                            
                            <Button x:Name="OptimizeAllBtn" Content="âš¡ Optimize All" Style="{StaticResource ActiveButton}" 
                                   Width="150" Height="45" Margin="0,0,0,20" Click="OptimizeAllBtn_Click"/>
                            
                            <TextBlock Text="Individual Optimizations:" FontFamily="Segoe UI Variable" FontSize="16" FontWeight="Bold" 
                                      Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,15"/>
                            
                            <StackPanel>
                                <Button x:Name="OptimizeNetworkBtn" Content="ðŸŒ Network" Style="{StaticResource ModernButton}" 
                                       Width="120" Height="40" Margin="0,5" HorizontalAlignment="Left" Click="OptimizeNetworkBtn_Click"/>
                                <Button x:Name="OptimizeMemoryBtn" Content="ðŸ§  Memory" Style="{StaticResource ModernButton}" 
                                       Width="120" Height="40" Margin="0,5" HorizontalAlignment="Left" Click="OptimizeMemoryBtn_Click"/>
                                <Button x:Name="OptimizeCpuBtn" Content="âš¡ CPU" Style="{StaticResource ModernButton}" 
                                       Width="120" Height="40" Margin="0,5" HorizontalAlignment="Left" Click="OptimizeCpuBtn_Click"/>
                                <Button x:Name="OptimizeDiskBtn" Content="ðŸ’¾ Disk" Style="{StaticResource ModernButton}" 
                                       Width="120" Height="40" Margin="0,5" HorizontalAlignment="Left" Click="OptimizeDiskBtn_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- NETWORK PAGE -->
                <Grid x:Name="NetworkPage" Visibility="Collapsed">
                    <Border Style="{StaticResource GlassCard}">
                        <StackPanel Margin="30,25">
                            <TextBlock Text="Network Monitor" FontFamily="Segoe UI Variable" FontSize="24" FontWeight="Bold" 
                                      Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,20"/>
                            <TextBlock Text="Real-time network monitoring and optimization" FontFamily="Segoe UI Variable" FontSize="14" 
                                      Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,30"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Download Speed" FontFamily="Segoe UI Variable" FontSize="16" FontWeight="Bold" 
                                              Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock x:Name="DownloadSpeedText" Text="0 MB/s" FontFamily="Segoe UI Variable" FontSize="24" 
                                              FontWeight="Bold" Foreground="{StaticResource SuccessBrush}" Margin="0,5,0,0"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Upload Speed" FontFamily="Segoe UI Variable" FontSize="16" FontWeight="Bold" 
                                              Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock x:Name="UploadSpeedText" Text="0 MB/s" FontFamily="Segoe UI Variable" FontSize="24" 
                                              FontWeight="Bold" Foreground="{StaticResource AccentBrush}" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- PROCESSES PAGE -->
                <Grid x:Name="ProcessesPage" Visibility="Collapsed">
                    <Border Style="{StaticResource GlassCard}">
                        <StackPanel Margin="30,25">
                            <TextBlock Text="Process Manager" FontFamily="Segoe UI Variable" FontSize="24" FontWeight="Bold" 
                                      Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,20"/>
                            <TextBlock Text="Advanced process monitoring and management" FontFamily="Segoe UI Variable" FontSize="14" 
                                      Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,30"/>
                            
                            <Button x:Name="RefreshProcessesBtn" Content="ðŸ”„ Refresh Processes" Style="{StaticResource ModernButton}" 
                                   Width="180" Height="40" Margin="0,0,0,20" Click="OnRefreshProcesses"/>
                            
                            <ListView x:Name="ProcessesList" Height="400" Background="Transparent" BorderThickness="0">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Name" Width="200" DisplayMemberBinding="{Binding ProcessName}"/>
                                        <GridViewColumn Header="ID" Width="80" DisplayMemberBinding="{Binding ProcessId}"/>
                                        <GridViewColumn Header="CPU %" Width="80" DisplayMemberBinding="{Binding CpuUsage, StringFormat=F1}"/>
                                        <GridViewColumn Header="Memory (MB)" Width="120" DisplayMemberBinding="{Binding MemoryMB}"/>
                                        <GridViewColumn Header="Path" Width="300" DisplayMemberBinding="{Binding FilePath}"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- GAMING PAGE -->
                <Grid x:Name="GamingPage" Visibility="Collapsed">
                    <Border Style="{StaticResource GlassCard}">
                        <StackPanel Margin="30,25">
                            <TextBlock Text="Gaming Performance Suite" FontFamily="Segoe UI Variable" FontSize="24" FontWeight="Bold" 
                                      Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,20"/>
                            <TextBlock Text="Optimize your system for maximum gaming performance" FontFamily="Segoe UI Variable" FontSize="14" 
                                      Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,30"/>
                            
                            <Button x:Name="EnableGamingModeBtn" Content="ðŸŽ® Enable Gaming Mode" Style="{StaticResource ActiveButton}" 
                                   Width="200" Height="50" FontSize="16" Margin="0,0,0,20" Click="EnableGamingModeBtn_Click"/>
                            
                            <TextBlock Text="Gaming Mode Features:" FontFamily="Segoe UI Variable" FontSize="16" FontWeight="Bold" 
                                      Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,15"/>
                            
                            <StackPanel Margin="20,0,0,0">
                                <TextBlock Text="â€¢ CPU Core Parking Disabled" FontFamily="Segoe UI Variable" FontSize="14" 
                                          Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5"/>
                                <TextBlock Text="â€¢ Network Throttling Disabled" FontFamily="Segoe UI Variable" FontSize="14" 
                                          Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5"/>
                                <TextBlock Text="â€¢ System Responsiveness Maximized" FontFamily="Segoe UI Variable" FontSize="14" 
                                          Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5"/>
                                <TextBlock Text="â€¢ Background Processes Optimized" FontFamily="Segoe UI Variable" FontSize="14" 
                                          Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5"/>
                                <TextBlock Text="â€¢ Memory Management Optimized" FontFamily="Segoe UI Variable" FontSize="14" 
                                          Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- ADVANCED PAGE -->
                <Grid x:Name="AdvancedPage" Visibility="Collapsed">
                    <Border Style="{StaticResource GlassCard}">
                        <StackPanel Margin="30,25">
                            <TextBlock Text="Advanced Settings" FontFamily="Segoe UI Variable" FontSize="24" FontWeight="Bold" 
