<Application x:Class="KernelDash.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:KernelDash"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- MODERN ANTHRACITE COLOR SCHEME -->
        <Color x:Key="PrimaryBlue">#5B9BD5</Color>
        <Color x:Key="PrimaryGreen">#70AD47</Color>
        <Color x:Key="PrimaryPurple">#9D4EDD</Color>
        <Color x:Key="AccentCyan">#4ECDC4</Color>
        <Color x:Key="AccentOrange">#FF8C42</Color>
        <Color x:Key="AccentRed">#E74C3C</Color>
        <Color x:Key="DarkBg">#1A1A1A</Color>
        <Color x:Key="CardBg">#2A2A2A</Color>
        <Color x:Key="GlassBg">#333333</Color>
        <Color x:Key="TextLight">#FFFFFF</Color>
        <Color x:Key="TextMuted">#B0B0B0</Color>

        <SolidColorBrush x:Key="BackgroundDark" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="BackgroundLight" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="CardBackground" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="SidebarBg" Color="#252525"/>
        <SolidColorBrush x:Key="AccentColor" Color="#5B9BD5"/>
        <SolidColorBrush x:Key="AccentColorHover" Color="#6BA8E0"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#B0B0B0"/>
        <SolidColorBrush x:Key="BorderColor" Color="#404040"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#70AD47"/>
        <SolidColorBrush x:Key="WarningColor" Color="#FF8C42"/>
        <SolidColorBrush x:Key="DangerColor" Color="#E74C3C"/>
        <SolidColorBrush x:Key="InfoColor" Color="#4ECDC4"/>

        <!-- GRADIENT BRUSHES -->
        <LinearGradientBrush x:Key="BlueGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#5B9BD5" Offset="0"/>
            <GradientStop Color="#7BB3E0" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="GreenGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#70AD47" Offset="0"/>
            <GradientStop Color="#8BC34A" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="PurpleGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#9D4EDD" Offset="0"/>
            <GradientStop Color="#C77DFF" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="OrangeGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF8C42" Offset="0"/>
            <GradientStop Color="#FFA366" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="RedGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#E74C3C" Offset="0"/>
            <GradientStop Color="#EC7063" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="CyanGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#4ECDC4" Offset="0"/>
            <GradientStop Color="#6EDDD5" Offset="1"/>
        </LinearGradientBrush>

        <!-- MODERN BUTTON STYLE WITH ANIMATION -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="600"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border Name="border" Background="{TemplateBinding Background}" CornerRadius="15">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="15" Opacity="0.3" ShadowDepth="2" Color="#000000"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentColorHover}"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="border" Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.BlurRadius)" 
                                                           From="15" To="22" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- GLASSMORPHISM CARD STYLE -->
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#2A2A2A" Opacity="0.75"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <SolidColorBrush Color="#FFFFFF" Opacity="0.12"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="25" Opacity="0.3" ShadowDepth="3" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- GLASSMORPHISM STAT CARD -->
        <Style x:Key="GlassStatCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#2A2A2A" Opacity="0.7"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <SolidColorBrush Color="#FFFFFF" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" Opacity="0.25" ShadowDepth="2" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- MODERN SIDEBAR BUTTON WITH GLASSMORPHISM -->
        <Style x:Key="SidebarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="500"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,14"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border Name="border" Background="{TemplateBinding Background}" CornerRadius="12" Margin="12,4">
                                <Border.Effect>
                                    <DropShadowEffect x:Name="shadow" BlurRadius="0" Opacity="0" ShadowDepth="0" Color="#5B9BD5"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8,0,0,0"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#5B9BD5" Opacity="0.15"/>
                                    </Setter.Value>
                                </Setter>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="shadow" Storyboard.TargetProperty="BlurRadius" 
                                                           From="0" To="12" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="shadow" Storyboard.TargetProperty="Opacity" 
                                                           From="0" To="0.4" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="shadow" Storyboard.TargetProperty="BlurRadius" 
                                                           From="12" To="0" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="shadow" Storyboard.TargetProperty="Opacity" 
                                                           From="0.4" To="0" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ACTIVE SIDEBAR BUTTON STYLE -->
        <Style x:Key="ActiveSidebarButton" TargetType="Button" BasedOn="{StaticResource SidebarButton}">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#5B9BD5" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#5B9BD5"/>
            <Setter Property="FontWeight" Value="600"/>
        </Style>

        <!-- STAT CARD STYLE WITH GRADIENT -->
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="18" Opacity="0.2" ShadowDepth="2" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- PULSING ANIMATION FOR PROGRESS BARS -->
        <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                           From="0.6" To="1.0" Duration="0:0:1.5" 
                           AutoReverse="True"/>
        </Storyboard>
        
        <!-- BADGE STYLE -->
        <Style x:Key="InfoBadge" TargetType="Border">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" Opacity="0.15" ShadowDepth="1" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
